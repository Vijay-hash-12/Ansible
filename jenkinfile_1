pipeline {
    agent any  // This means Jenkins will run on any available agent (executor)
 
    environment {
        // Define paths for your Ansible playbook and inventory file
        ANSIBLE_PLAYBOOK = 'install_docker.yml'  // Path to your Ansible playbook in the GitHub repo
        INVENTORY_FILE = '/home/Vijay/ansible_books/inventory.ini'  // Full path to the inventory file on your Azure VM
        AZURE_SSH_PASSWORD = credentials('ssh_password')  // Use Jenkins credentials for SSH password
    }
 
    stages {
        stage('Checkout Code from GitHub') {
            steps {
                // Pull the latest code from the GitHub repository (main branch)
                git branch: 'main', url: 'https://github.com/Vijay-hash-12/Ansible.git'
            }
        }
 
        stage('Run Ansible Playbook') {
            steps {
                // Run the Ansible playbook using the inventory file
                // Use Jenkins credentials for SSH password authentication
                sh """
                    ansible-playbook -i ${INVENTORY_FILE} ${ANSIBLE_PLAYBOOK} --extra-vars "ansible_ssh_pass=${AZURE_SSH_PASSWORD}" --ask-pass
                """
            }
        }
    }
 
    post {
        success {
            echo 'Docker installation was successful!'  // Notify on success
        }
        failure {
            echo 'Docker installation failed!'  // Notify on failure
        }
    }
}
